<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_color"
    tools:context=".UpdateProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view2"
                app:cardCornerRadius="90dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="180dp"
                    android:layout_width="180dp"
                    android:id="@+id/ivProfileUpdate"
                    android:src="@drawable/profile_icon" />
            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/etNameUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:hint="Username"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etEmailUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etAgeUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:hint="Age"
                android:inputType="number" />

            <EditText
                android:id="@+id/etPhoneUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:hint="Phone"
                android:inputType="number" />
            <EditText
                android:id="@+id/etAddressUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:hint="Address"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialist at: "
                    android:textSize="20dp"
                    android:textColor="#000"/>
                <Spinner
                    android:textAlignment="center"
                    android:id="@+id/spinnerUpdate"
                    android:entries="@array/Specialists"
                    android:layout_marginBottom="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                </Spinner>

            </LinearLayout>

            <Button
                android:background="@drawable/button_background"
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Save"
                android:textSize="20dp"
                android:textColor="#000"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>